<script type="text/javascript">
<% if Rails.env.development? %>

  // Enable pusher logging - don't include this in production
  Pusher.log = function(message) {
    if (window.console && window.console.log) window.console.log(message);
  };
  
  // Flash fallback logging - don't include this in production
  WEB_SOCKET_DEBUG = true;
  
<% end %>

  var pusher = new Pusher('<%= Pusher.key %>');
  var channel = pusher.subscribe('<%= Comment::COMMENT_CHANNEL %>');
  channel.bind('comment', function(data) {
    var contentElement = $(data.content);
    var spriteCommentsElement = $('#comments-sprite-' + data.sprite_id)[0];
    if (!spriteCommentsElement) { return; }
    contentElement.hide().prependTo(spriteCommentsElement);
    contentElement.slideToggle();
  });
</script>