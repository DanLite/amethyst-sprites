<div>
  <div id="activity-<%= activity.id %>" class="activity-feed-item <%= activity.type %>">
    <%= link_to(series_path(:id => activity.sprite.series), :class => "button") do %>
    <% image_tag(activity.sprite.image.url, :style => "height: 80px; weight: 80px; vertical-align: middle; padding: 4px; margin: 4px") %>
    <% end %>
    <div class="activity-description">
      <span style="font-weight: bold; font-size: 80%"><%= format_activity_feed_datetime(activity.created_at) %></span>
      <br /><br />
      <%= "#{activity.sprite.artist ? activity.sprite.artist.name : 'Someone '} uploaded a sprite for #{activity.sprite.series.pokemon.full_name}" %>
    </div>
    <div style="clear: both"></div>
  </div>
  <div>
    <hr style="width: 75%" />
  </div>
</div>