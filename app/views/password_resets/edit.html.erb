<%= semantic_form_for @artist, :url => password_reset_path(params[:id]) do |f| %>
  <fieldset>
    <legend>Set a new password</legend>
    <%= f.input :password, :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.buttons do %>
      <%= f.commit_button "Update Password" %>
    <% end %>
  </fieldset>
<% end %>