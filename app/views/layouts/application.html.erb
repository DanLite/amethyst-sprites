<!DOCTYPE html>
<html>
<head>
  <title>AmethystSprites</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<ul class="hmenu mainmenu" style="float: left">
		<li><%= link_to "Gallery", pokemon_index_path %></li>
	</ul>
	<ul class="hmenu" style="float: right">
		<% if current_artist %>
		<li>Logged in as <%= current_artist.name %></li>
		<% end %>
	  <%= render 'navigation/registration_items' %>
	  <%= render 'navigation/login_items' %>
	</ul>
	<div style="clear: both" />
<% if notice %>	
	<div class="notice"><%= notice %></div>
<% end %>
<% if alert %>
	<div class="alert"><%= alert %></div>
<% end %>
<% if flash[:errors] %>
  <div class="error"><%= flash[:errors].is_a?(String) ? flash[:errors] : content_tag(:ul){ flash[:errors].map{|e| content_tag(:li, e)}.join.html_safe } %></div>
<% end %>

<%= yield %>

</body>
</html>
