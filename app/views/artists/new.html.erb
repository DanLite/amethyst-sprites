<%= semantic_form_for @artist, :url => sign_up_url, :html => {:class => 'form-vertical'} do |f| %>
  <fieldset>
    <legend>Register</legend>
  <%= f.input :name, :required => false, :hint => "(If you've worked on this project before, please use your Smogon/Serebii forum username)" %>
  <%= f.input :email, :required => false, :hint => "(used for password recovery)" %>
  <%= f.input :password, :required => false %>
  <%= f.input :password_confirmation, :required => false %>
  <%= f.buttons do %>
  <%= f.commit_button 'Submit' %>
  <% end %>
  </fieldset>
<% end %>